#stage
  position: fixed
  top: 0px
  left: 0px
  width: 100%
  height: 100%
  overflow: hidden
  
.set 
  background-size: cover
  background-position: center
  position: fixed
  width: 100%
  height: 100%

.bedroom-wall
  z-index: 1
  background-image: url('images/bedroom/wall.png')
  animation: hue 4s infinite
  
.bedroom-furniture
  z-index: 2
  background-image: url('images/bedroom/furniture.png')
  -webkit-filter: blur(40px)
  filter: blur(40px)
  
.bedroom-bed
  z-index: 3
  background-image: url('images/bedroom/bed.png')
  -webkit-filter: blur(40px)
  filter: blur(40px)
  
.bedroom-bedside
  z-index: 1
  background-image: url('images/bedroom/bedside.png')
  
.bear-clock
  position: absolute
  z-index: 2
  width: 300px
  height: 300px
  top: 20%
  left: 5%
  background-image:  url('sprites/bear-clock.png')
  background-repeat: no-repeat
  background-position: 0
  background-size: 1800px
  animation: bear-clock .7s steps(6, end) infinite
  
.bedroom-wallpaper
  z-index: 1
  position: fixed
  width: 100%
  height: 100%
  background-image: url('images/bedroom/wallpaper.gif')
  animation: hue 4s infinite

.coach-angry
  position: absolute
  z-index: 4
  top: 0%
  left: 50%
  margin-left: -300px
  width: 600px
  height: 100%
  background-image:  url('sprites/coach-angry.png')
  background-repeat: no-repeat
  background-position: 0
  background-size: 2400px
  animation: coach-angry .5s steps(4, end) infinite
  -webkit-filter: blur(40px)
  filter: blur(40px)
  
.coach-mellow
  position: absolute
  z-index: 3
  top: 0%
  left: 50%
  margin-left: -300px
  width: 600px
  height: 100%
  background-image:  url('sprites/coach-mellow.png')
  background-repeat: no-repeat
  background-position: 0
  background-size: 4800px
  animation: coach-mellow 1s steps(8, end) infinite
  
#mirror-video-viewport
  position: absolute
  top: 0
  left: 0
  overflow: hidden
  z-index: 700
  -webkit-transform: scale(-1, 1)
  transform: scale(-1, 1)
  -webkit-clip-path: ellipse(40% 30% at 50% 50%);
  clip-path: ellipse(40% 30% at 50% 50%);
  animation: mirror 2s infinite

@keyframes bear-clock
  100%
    background-position: -1800px
    
@keyframes coach-angry 
  100%
    background-position: -2400px
    
@keyframes coach-mellow
  100%
    background-position: -4800px
    
@keyframes hue
  from
    -webkit-filter: hue-rotate(0deg);
    filter: hue-rotate(0deg);
  to 
    -webkit-filter: hue-rotate(360deg);
    filter: hue-rotate(360deg);
    
@keyframes mirror
  0%
    -webkit-filter: sepia(1) hue-rotate(160deg) brightness(1.2);
    filter: sepia(1) hue-rotate(160deg) brightness(1.2);
  50%
    -webkit-filter: sepia(1) hue-rotate(180deg) brightness(2.0);
    filter: sepia(1) hue-rotate(180deg) brightness(2.0);
  100%
    -webkit-filter: sepia(1) hue-rotate(160deg) brightness(1.2);
    filter: sepia(1) hue-rotate(160deg) brightness(1.2);
