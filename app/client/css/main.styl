// STRUCUTRE

  // GRID BUILDER
$gutter = 16px

$margin-tiny = ($gutter/2)
$margin-small = ($gutter)
$margin-basic = ($gutter*2)
$margin-large = ($gutter*5)

// COLORS

$color-black = rgb(0,0,0)
$color-white = rgb(255,255,255)

html
  background-color: $color-white
  color: $color-black

// TYPOGRAPHY

$font-size-basic = 19px
$font-leading-basic = 1.4em

$font-size-h1 = 40px
$font-size-h2 = 30px
$font-size-h3 = 24px

html
  font-family: sans-serif
  font-size: $font-size-basic
  line-height: $font-leading-basic
  
.text-box
  position: fixed
  background: white
  bottom: 2%
  left: 2%
  width: 96%
  padding: 4%
  box-sizing: border-box
  border: 10px solid blue
  color: blue
  font-size: 3em
  z-index: 900
  display: none
  border-radius: 15px
  line-height: $font-leading-basic
  form 
    width: 100%
  input
    font-size: 1em
    border: 0
    border-bottom: 10px solid blue
    width: 100%
    margin-bottom: 60px
    &:focus
      outline: 0
  input[type="submit"]
    margin-bottom: 0
    background: blue
    border-radius: 20px
    padding: 10px
    color: white
  
.text-box-dialog
  display: inline
  margin-right: 1em
  
.text-box-next
  font-weight: bold
  opacity: 1
  animation: blink .5s infinite
  
@keyframes blink
  from
    opacity: 1
  to
    opacity: 0
    
.blackout
  position: fixed
  width: 100%
  height: 100%
  top: 0
  left: 0
  z-index: 800
  display: none
  background: black

  // HEADINGS

h1
  font-size: $font-size-h1

h2
  font-size: $font-size-h2

h3
  font-size: $font-size-h3

h1,h2,h3,h4,h5,h6
  line-height: $font-leading-basic

  // LINKS

a,a:active,a:visited
  color:inherit
  text-decoration: none
  transition:opacity .2s
  &:hover
    opacity:.5