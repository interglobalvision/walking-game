<?xml version='1.0' encoding='utf-8'?>
<widget id="vision.interglobal.walking.game" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>WalkingGame</name>
    <description>
        BADDEST [aka badly made] phone game ever
    </description>
    <author email="globie@interglobal.vision" href="http://interglobal.vision">
        interglobal.vision
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <icon src="assets/icons/DefaultIcon.png" />
    <platform name="android">
        <allow-intent href="market:*" />
        <splash density="land-hdpi" src="assets/splashes/android/hdpi.png" />
        <splash density="land-mdpi" src="assets/splashes/android/mdpi.png" />
        <splash density="land-xhdpi" src="assets/splashes/android/xhdpi.png" />
        <splash density="land-xxhdpi" src="assets/splashes/android/xxhdpi.png" />
        <splash density="port-hdpi" src="assets/splashes/android/hdpi.png" />
        <splash density="port-mdpi" src="assets/splashes/android/mdpi.png" />
        <splash density="port-xhdpi" src="assets/splashes/android/xhdpi.png" />
        <splash density="port-xxhdpi" src="assets/splashes/android/xxhdpi.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <splash height="960" src="assets/splashes/ios/Default@2x.png" width="640" />
        <splash height="1024" src="assets/splashes/ios/Default-Portrait.png" width="768" />
        <splash height="2048" src="assets/splashes/ios/Default-Portrait@2x.png" width="1536" />
        <splash height="2208" src="assets/splashes/ios/Default-Portrait-736h@3x.png" width="1242" />
        <splash height="1536" src="assets/splashes/ios/Default-Landscape@2x.png" width="2048" />
        <splash height="768" src="assets/splashes/ios/Default-Landscape.png" width="1024" />
        <splash height="1136" src="assets/splashes/ios/Default-568h@2x.png" width="640" />
        <splash height="1334" src="assets/splashes/ios/Default-667h@2x.png" width="750" />
        <splash height="1242" src="assets/splashes/ios/Default-Landscape-736h@3x.png" width="2208" />
    </platform>
    <preference name="Fullscreen" value="true" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="Orientation" value="portrait" />
    <engine name="browser" spec="~4.0.0" />
    <engine name="ios" spec="~3.9.1" />
    <engine name="android" spec="4.0.2" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-camera" spec="^1.2.0" />
    <plugin name="cordova-plugin-device-orientation" spec="^1.0.1" />
    <plugin name="cordova-plugin-crosswalk-webview" spec="^1.3.1" />
    <preference name="xwalkVersion" value="15+" />
    <preference name="xwalkCommandLine" value="--disable-pull-to-refresh-effect" />
    <preference name="xwalkMode" value="embedded" />
    <preference name="xwalkMultipleApk" value="true" />
    <preference name="xwalkVersion" value="14+" />
</widget>
