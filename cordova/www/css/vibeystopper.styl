.vibey-background
  position: absolute
  width: 100%
  height: 100%
  background: lightgrey

.vibey-flash
  animation: vibey-flash 50ms infinite linear
  
.vibey-switch
  position: absolute
  height: 45%
  width: 70%
  top: 26%
  left: 15%
  background-color: tomato
  background-image: url('../img/games/vibeystopper/vibey-switch.png')
  background-size: 100% 100%
  transform: scale(1, -1);
  border: 3px solid black
  transition: background-color 300ms
  
.vibey-on 
  background-color: greenyellow
  transform: scale(-1, 1);
    
.vibey-machine-1
  position: absolute
  top: 0
  background-image: url('../img/games/vibeystopper/vibey-1.png')
  
.vibey-machine-2
  position: absolute
  top: 70%
  background-image: url('../img/games/vibeystopper/vibey-2.png')
  
.vibey-machine 
  position: absolute
  height: 30%
  width: 100%
  background-size: 80% 80%
  background-position: center
  background-repeat: no-repeat
  
@keyframes vibey-flash
  from
    background: black
  to
    background: white
  