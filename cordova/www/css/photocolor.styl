#photocolor-bg
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  transform-origin: center
  background-color: #ffffff
  background-image: url('../img/games/photocolor/grid.png')
  background-position: center
  background-size: 30px
  animation: grid-bg 2s infinite ease-in-out
  
@keyframes grid-bg
  0%
    transform: scale(1)
  50%
    transform: scale(2)
  100%
    transform: scale(1)

#brush
  position: absolute
  transform: rotate(-25deg)
  width: 200px
  height: 57.191px
  top: 50%
  left: 40%
  margin-top: -26px
  pointer-events: none
  opacity: 0
  
.brush-swipe
  animation: brush-swipe 1s 1 linear
  animation-fill-mode: forwards;  
  
@keyframes brush-swipe
  0%
    transform: rotate(-25deg)
    opacity: 0
  10%
    transform: rotate(-25deg)
    opacity: 1
  80%
    transform: rotate(15deg)
    opacity: 1
  100%
    transform: rotate(25deg)
    opacity: 0
    
#splat
  position: absolute
  width: 300px
  height: 300px
  top: 50%
  left: 50%
  margin-top: -150px
  margin-left: -150px
  opacity: 0
  &.show-splat
    animation: show-splat 500ms 1 ease-in
    animation-fill-mode: forwards

@keyframes show-splat
  0%
    opacity: 0
    transform: scale(0.3)
  100%
    opacity: 1
    transform: scale(1)
    
#take-photo
  position: absolute
  top: 100%
  width: 50%
  left: 25%
  transition: top 1s
  &.show-camera
    top: 60%
    

  