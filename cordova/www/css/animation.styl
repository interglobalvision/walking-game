#blackout
  position: fixed
  width: 100%
  height: 100%
  top: 0
  left: 0
  z-index: 800
  background: white
  pointer-events: none
  opacity: 1

#stage
  position: fixed
  top: 0px
  left: 0px
  width: 100%
  height: 100%
  overflow: hidden

.set
  background-size: cover
  background-position: center
  position: fixed
  width: 100%
  height: 100%

#bedroom-wall
  z-index: 1
  background-image: url('../img/bedroom/wall.png')
  animation: hue 4s infinite

#bedroom-furniture
  z-index: 2
  background-image: url('../img/bedroom/furniture.png')

#bedroom-bed
  z-index: 3
  background-image: url('../img/bedroom/bed.png')

#bedroom-bedside
  z-index: 1
  background-image: url('../img/bedroom/bedside.png')

#bear-clock
  position: absolute
  z-index: 2
  width: 100px
  height: 100px
  top: 20%
  left: 5%
  background-image:  url('../img/sprites/bear-clock.png')
  background-repeat: no-repeat
  background-position: 0
  background-size: 600px
  animation: bear-clock .7s steps(6, end) infinite

#bedroom-wallpaper
  z-index: 1
  position: absolute
  width: 100%
  height: 100%
  background-image: url('../img/bedroom/wallpaper.gif')
  animation: hue 4s infinite

#coach-container
  animation: coach-fly 1s infinite
  position: absolute
  top: 0%
  left: 0%
  width: 100%
  height: 100%
  z-index: 800

#coach-angry
  position: absolute
  top: 0%
  left: 50%
  margin-left: -100px
  width: 200px
  height: 100%
  background-image:  url('../img/sprites/coach-angry.png')
  background-repeat: no-repeat
  background-position: 0
  background-size: 800px
  animation: coach-angry .5s steps(4, end) infinite

#coach-mellow
  position: absolute
  top: 0%
  left: 50%
  margin-left: -100px
  width: 200px
  height: 100%
  background-image:  url('../img/sprites/coach-mellow.png')
  background-repeat: no-repeat
  background-position: 0
  background-size: 1600px
  animation: coach-mellow 1s steps(8, end) infinite

.mirror-border
  background: rgb(245,246,246);
  background: -webkit-radial-gradient(center, ellipse cover, #dbdce2 55%, #b8bac6 60%, #dbdce2 65%);
  background: radial-gradient(ellipse at center, #dbdce2 55%, #b8bac6 60%, #dbdce2 65%);
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  z-index: 699
  -webkit-clip-path: ellipse(45% 34% at 50% 50%);
  clip-path: ellipse(45% 34% at 50% 50%);

#mirror-video ,
#mirror-still
  opacity: 0.8
  animation: mirror 2s infinite

#mirror-video-viewport
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  overflow: hidden
  z-index: 700
  -webkit-transform: scale(-1, 1)
  transform: scale(-1, 1)
  -webkit-clip-path: ellipse(40% 30% at 50% 50%);
  clip-path: ellipse(40% 30% at 50% 50%);

#mirror-video
  width: 100%
  height: 100%

#mirror-still
  width: 100%
  height: 100%
  background-size: cover
  background-position: center

.mirror-coach
  left: -100px
  margin-left: 0
  transform: scale(.7)
  top: 20%
  -webkit-filter: saturate(0)
  filter: saturate(0)
  
#livingroom-container
  position: fixed
  width: 100%
  height: 100%
  transition: transform 500ms

.livingroom
  width: 200% 
  left: -100%
  
#livingroom-wall
  z-index: 1
  background-image: url('../img/bedroom/wall.png')
  
#livingroom-room
  background-image: url('../img/livingroom/room.png')
  z-index: 2

#livingroom-aunt
  z-index: 3
  width: 100%
  background-image:  url('../img/livingroom/aunt3.png')
  background-repeat: no-repeat
  background-position: 0%
  background-size: 200% 100%
  animation: livingroom-aunt .5s steps(2, end) infinite

#livingroom-cat
  background-image: url('../img/livingroom/cat.png')
  top: -5%
  z-index: 4
  animation: livingroom-cat 3s infinite linear

#livingroom-sofa
  background-image: url('../img/livingroom/sofa.png')
  z-index: 5

.livingroom-compass
  opacity: 0
  background-size: cover
  background-position: center
  position: fixed
  transition: all 2s
  pointer-events: none
  width: 100%
  height: 100%

.show-compass
  opacity: 1
  #livingroom-compass-obj
    width: 200px
    height: 200px
    margin-left: -100px
    margin-top: -100px 

#livingroom-compass-bg
  position: absolute
  background-image: url('../img/livingroom/compass-bg.jpg')
  background-size: contain
  z-index: 6
  animation: hue 4s infinite linear
  width: 100%
  height: 100%
  

#livingroom-compass-obj
  position: absolute
  background-image: url('../img/compass.png')
  background-size: contain
  z-index: 7
  width: 0px
  height: 0px
  top: 50%
  left: 50%
  margin-top: 0px
  margin-left: 0px 
  transition: all 2s
  animation: livingroom-spin-compass 2s infinite linear
  
.letsgo-background
  position: absolute
  background: black 
  width: 100%
  height: 100%
  background-color: black
  background-image: url('../img/letsgo/letsgo-background.png')
  background-size: cover
  animation: letsgo-background 2s infinite linear
  
.coach-shiny
  position: absolute
  top: 25%
  left: 10% 
  width: 80%
  height: 50%
  background-image: url('../img/letsgo/coach-shiny.png')
  background-size: 400% 100%
  background-position: 0% center
  animation: coach-shiny 1s steps(4, end) infinite
  
@keyframes coach-shiny
  100%
    background-position: 400% center
  
@keyframes letsgo-background
  0%
    background-color: black
    -webkit-filter: hue-rotate(100deg)
    filter: hue-rotate(100deg)
  50% 
    background-color: white
    -webkit-filter: hue-rotate(150deg)
    filter: hue-rotate(150deg)
  100%
    background-color: black
    -webkit-filter: hue-rotate(100deg)
    filter: hue-rotate(100deg)

@keyframes bear-clock
  100%
    background-position: -600px

@keyframes coach-fly
  0%
    transform: translateY(0px)
  50%
    transform: translateY(20px)
  100%
    transform: translateY(0px)

@keyframes coach-angry
  100%
    background-position: -800px

@keyframes coach-mellow
  100%
    background-position: -1600px

@keyframes hue
  from
    -webkit-filter: hue-rotate(0deg);
    filter: hue-rotate(0deg);
  to
    -webkit-filter: hue-rotate(360deg);
    filter: hue-rotate(360deg);

@keyframes mirror
  0%
    -webkit-filter: sepia(1) hue-rotate(160deg) brightness(1.2);
    filter: sepia(1) hue-rotate(160deg) brightness(1.2);
  50%
    -webkit-filter: sepia(1) hue-rotate(180deg) brightness(2.0);
    filter: sepia(1) hue-rotate(180deg) brightness(2.0);
  100%
    -webkit-filter: sepia(1) hue-rotate(160deg) brightness(1.2);
    filter: sepia(1) hue-rotate(160deg) brightness(1.2);

@keyframes livingroom-aunt
  from
    background-position: 0%
  to
    background-position: 200%

@keyframes livingroom-cat
  from
    transform: translateX(100%)
  to
    transform: translateX(-100%)

@keyframes livingroom-spin-compass
  from
    transform: rotate(0deg)
  to
    transform: rotate(360deg)

@media screen and (max-width: 600px)
  html
    width: 100%
