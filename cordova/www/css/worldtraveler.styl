.worldtraveler-background
  position: absolute
  bottom: 0
  left: 0
  width: 100%
  height: 400%
  background-color: orangered
  background-image: url('../img/games/worldtraveler/worldtraveler-squiggles.svg')
  background-size: 110% 50%
  background-position: center 0%
  background-repeat: repeat-y
  
.worldtraveler-pyramids
  position: absolute
  top: 0
  left: 0
  width: 400%
  height: 100%
  background-image: url('../img/games/worldtraveler/worldtraveler-pyramids.svg')
  background-size: 50% 95%
  background-position: 0% 120%
  background-repeat: repeat-x
  
.worldtraveler-coach
  position: absolute
  top: 32%
  left: 20%
  width: 60%
  height: 36%
  background-image: url("../img/games/worldtraveler/coach-blue.svg");
  background-repeat: repeat-x
  background-position: 0%
  background-size: 400% 100%
  animation: worldtraveler-coach 1s steps(4, end) infinite
  
.worldtraveler-background-anim
  animation: worldtraveler-background 20s infinite linear

.worldtraveler-pyramids-anim
  animation: worldtraveler-pyramids 3s infinite linear
  
.worldtraveler-flash
  animation: worldtraveler-flash 200ms steps(2, end) infinite
  
.worldtraveler-spin
  animation: worldtraveler-spin 500ms infinite linear
  
@keyframes worldtraveler-flash
  from
    opacity: 0.5
  to
    opacity: 0
    
@keyframes worldtraveler-spin
  from
    transform: rotate(0deg)
  from
    transform: rotate(360deg)
  
@keyframes worldtraveler-coach
  from
    background-position: 0%
  to
    background-position: 400%
    
@keyframes worldtraveler-pyramids
  from
    transform: translateX(0%)
  to
    transform: translateX(-50%)
    
@keyframes worldtraveler-background
  from
    transform: translateY(0%)
  to
    transform: translateY(50%)
  