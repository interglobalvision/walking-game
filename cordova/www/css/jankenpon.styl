.jankenpon-stage
  background-color: #06FF94

.jankenpon-background
  position: absolute
  width: 100%
  height: 100%
  background-image: url(../img/games/jankenpon/jankenpon-background.svg)
  background-size: cover
  background-position: center
  background-repeat: no-repeat
  animation: jankenpon-background 1s infinite
  
.jankenpon-element
  position: absolute
  &:active
    transform: scale(1.2)
  
.jankenpon-scissors
  width: 50%
  top: 5%
  left: 10%
  
.jankenpon-rock
  width: 50%
  top: 30%
  left: 40%

.jankenpon-paper
  width: 40%
  top: 60%
  left: 5%
  
@keyframes jankenpon-background
  0%
    transform: skew(-10deg)
  50%
    transform: skew(10deg)
  100%
    transform: skew(-10deg)