.tap-background
  position: absolute
  width: 200%
  height: 100% 
  background-size: 50% 110%
  background-position: center
  background-repeat: repeat-x
  will-change: transform
  
.tap-background-1
  background-color: #00ADFF
  background-image: url("../img/games/supertap/tap-background-1.svg")

.tap-background-2
  background-image: url("../img/games/supertap/tap-background-2.svg")
  
.tap-frame
  position: absolute
  width: 90vw
  height: 45vh
  box-sizing: border-box
  
#tap-countdown-frame
  width: 80vw
  top: 2.5vh
  left: 10vw
  background-image: url("../img/games/supertap/tap-number-frame.svg")
  background-size: cover
  font-size: 180px
  color: white
  background-size: 100% 100%
  background-position: center
  
.tap-countdown
  position: absolute
    
#tap-button-frame
  bottom: 2.5vh
  left: 5vw

#tap-button
  background-color: lightcoral
  background-image: url("../img/games/supertap/tap-coach.svg")
  background-size: contain
  background-position: center
  background-repeat: no-repeat
  color: white
  position: relative
  border: 5px grey solid
  border-radius: 50%
  box-shadow: 0px 20px 0px 0px darkgrey
  transform: translateY(-10px)
  width: 80%
  height: 80%
  margin-top: 10%
  margin-left: 10%
  will-change: transform, box-shadow
  &:active
    box-shadow: 0px 15px 0px 0px darkgrey
    transform: translateY(-5px)
    
.tap-background-1-anim
  animation: tap-background-1 1.5s infinite linear
  
.tap-background-2-anim
  animation: tap-background-2 1.5s infinite linear
    
@keyframes tap-background-1
  from
    transform: translateX(0%)
  to 
    transform: translateX(-50%)
    
@keyframes tap-background-2
  from
    transform: translateX(-50%)
  to 
    transform: translateX(0%)
