.tap-background
  position: absolute
  width: 100%
  height: 100% 
  background-image: url("../img/games/supertap/tap-background.png")
  background-size: 105% 105%
  background-position: center
  
.tap-frame
  position: absolute
  width: 90vw
  height: 45vh
  box-sizing: border-box
  
#tap-countdown-frame
  width: 80vw
  top: 2.5vh
  left: 10vw
  background-image: url("../img/games/supertap/tap-number-frame.png")
  background-size: cover
  font-size: 180px
  color: white
  background-size: 100% 100%
  background-position: center
  
.tap-countdown
  position: absolute
    
#tap-button-frame
  bottom: 2.5vh
  left: 5vw

#tap-button
  background-color: lightcoral
  background-image: url("../img/games/supertap/tap-coach.png")
  background-size: contain
  background-position: center
  background-repeat: no-repeat
  color: white
  position: relative
  border: 5px grey solid
  border-radius: 50%
  box-shadow: 0px 20px 0px 0px darkgrey
  transform: translateY(-10px)
  width: 80%
  height: 80%
  margin-top: 10%
  margin-left: 10%
  &:active
    box-shadow: 0px 15px 0px 0px darkgrey
    transform: translateY(-5px)
