#shaky-progress-holder
  position: relative
  width: 100%
  height: 50vh
  background-color: green

#shaky-progress
  position: absolute
  top: 0
  left: 0
  height: 50vh
  background-color: red
  transition: width .2s

.shaky-stage
  background-color: #4D4D4D
#shaky-background

#shaky-coach
  position: absolute
  top: 0
  width: 100%
  height: 50%

#shaky-sleep-bubble
  will-change: transform
  transform-origin: bottom
  animation: shaky-sleep-bubble 3s infinite ease-in-out

@keyframes shaky-sleep-bubble
  0%
    transform: scale(.1)
  40%
    transform: scale(1)
  100%
    transform: scale(.1)
