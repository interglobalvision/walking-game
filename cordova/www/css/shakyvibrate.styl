.shaky-stage
  background-color: #4D4D4D

.shaky-background
  position: absolute
  height: 100%
  width: 200%
  background-image: url(../img/games/shakyvibrate/shakyvibrate-background.svg)
  background-size: 25%
  background-position: center
  background-repeat: repeat
  will-change: transform
  animation: shaky-background 3s infinite linear

@keyframes shaky-background
  from
    transform: translateX(0%)
  to
    transform: translateX(-50%)

#shaky-coach
  position: absolute
  top: 0
  width: 100%
  height: 50%

#shaky-sleep-bubble
  will-change: transform
  transform-origin: bottom
  animation: shaky-sleep-bubble 3s infinite ease-in-out

@keyframes shaky-sleep-bubble
  0%
    transform: scale(.1)
  40%
    transform: scale(1)
  100%
    transform: scale(.1)

#shaky-alarm
  position: absolute
  bottom: 0
  width: 100%
  height: 50%

for progress in 1..10
  #shaky-alarm.progress-{progress}
    .shaky-meter:nth-child(-n+{(progress + 3)})
      display: block

.shaky-meter
  display: none
