.chargephone-stage
  background-color: #F7931E

.chargephone-background
  position: absolute
  width: 100%
  height: 200%
  background-image: url(../img/games/chargephone/chargephone-background.svg)
  background-size: contain
  background-position: center
  background-repeat: repeat
  will-change: transform
  animation: chargephone-background 3s infinite linear

@keyframes chargephone-background
  from
    transform: translateY(0%)
  to
    transform: translateY(-50%)

#chargephone-coach
  position: absolute
  width: 100%
  height: 50%
  top: 25%
  transform-origin: left
  transition: transform 4s
  &.zoom-phone
    transform: scale(4)

#battery-status
  #battery-green
    display: none
  #battery-charge
    display: none
  &.green
    #battery-green
      display: initial
    #battery-red
      display: none
    #battery-charge
      display: none
  &.red
    #battery-green
      display: none
    #battery-red
      display: initial
    #battery-charge
      display: none
  &.charge
    #battery-green
      display: none
    #battery-red
      display: none
    #battery-charge
      display: initial
