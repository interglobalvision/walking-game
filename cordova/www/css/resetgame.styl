.reset-background
  position: absolute
  background: black 
  width: 100%
  height: 100%
  background-color: black
  background-image: url('../img/letsgo/letsgo-background.png')
  background-size: cover
  transform: rotate(180deg)
  animation: reset-background 2s infinite linear
  
.coach-reset
  position: absolute
  top: 25%
  left: 10% 
  width: 80%
  height: 50%
  background-image: url('../img/letsgo/coach-shiny.png')
  background-size: 400% 100%
  background-position: 0% center
  animation: coach-reset 1s steps(4, end) infinite
  filter: hue-rotate(250deg)
  pointer-events: none
  
.reset-option
  position: absolute
  width: 50%
  height: 25%
  border-radius: 50%
  left: 25%
  border-width: 10px
  background: darkgrey
  color: white
  font-size: 20px
  
.reset-yes
  top: 10%
  
.reset-no 
  bottom: 10%
  
@keyframes coach-reset
  100%
    background-position: 400% center
  
@keyframes reset-background
  0%
    background-color: black
    filter: hue-rotate(200deg)
  50% 
    background-color: white
    filter: hue-rotate(250deg)
  100%
    background-color: black
    filter: hue-rotate(200deg) 