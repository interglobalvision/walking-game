.colorsnap-background
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  background-color: darkgrey
  background-image: url('../img/games/colorsnap/colorsnap-background.svg')
  background-position: center
  background-size: 100% 100% 
  transition: background-color 2000ms

#brush
  position: absolute
  transform: rotate(-25deg)
  width: 200px
  height: 57.191px
  top: 50%
  left: 40%
  margin-top: -26px
  pointer-events: none
  opacity: 0
  
.brush-swipe
  animation: brush-swipe 1s 1 linear
  animation-fill-mode: forwards;  
  
@keyframes brush-swipe
  0%
    transform: rotate(-25deg)
    opacity: 0
  10%
    transform: rotate(-25deg)
    opacity: 1
  80%
    transform: rotate(15deg)
    opacity: 1
  100%
    transform: rotate(25deg)
    opacity: 0
    
#splat
  position: absolute
  width: 300px
  height: 300px
  top: 50%
  left: 50%
  margin-top: -150px
  margin-left: -150px
  opacity: 0
  &.show-splat
    animation: show-splat 1000ms 1 ease-in
    animation-fill-mode: forwards

@keyframes show-splat
  0%
    opacity: 0
    transform: scale(0.3)
  70%
    opacity: 0
    transform: scale(0.3)
  100%
    opacity: 1
    transform: scale(1)
    
#take-photo
  position: absolute
  top: 100%
  left: 25% 
  transition: top 1s
  width: 50%
  height: 25%
  background-image: url('../img/games/colorsnap/colorsnap-camera.svg')
  background-size: 100%
  background-repeat: no-repeat
  &.show-camera
    top: 60%
    
#output-img
  width: 33%
  height: 33%
  top: 10%
  right: 10%
  position: absolute
  border: 5px solid black
  border-radius: 15px
  opacity: 0
