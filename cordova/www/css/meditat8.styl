.medit8-stage
  background-color: black

.medit8-background
  position: absolute
  top: 0
  left: 0
  width: 120%
  height: 120%
  background-image: url('../img/games/medit8/medit8-background.svg')
  will-change: transform
  background-size: 30%;
  background-position: center;
  background-repeat: repeat;
  width: 200%;
  height: 200%;
  top: -50%;
  left: -50%;
  
.medit8-clock
  position: absolute
  width: 120%
  height: 120%
  top: -10%
  left: -10%
  transform-origin: center
  background-size: 100% 100%
  background-position: center
  background-repeat: no-repeat
  transform: skew(-10deg)

.medit8-clock-face
  background-image: url('../img/games/medit8/medit8-clock.svg')
  will-change: filter, -webkit-filter
  
.medit8-clock-hands
  background-image: url('../img/games/medit8/medit8-clockhands.svg')
  will-change: transform
  
.medit8-coach-container
  position: absolute
  height: 100%
  width: 100%
  top: 0
  left: 0
  will-change: transform
  
.medit8-coach
  position: absolute
  top: 32%
  left: 20%
  width: 60%
  height: 36%
  background-size: 100% 100%
  opacity: 0
  transition: opacity 5s
  will-change: background-image, background-size, opacity
  
.medit8-coach-talk
  background-image: url("../img/games/medit8/medit8-coach-talk.svg");
  background-repeat: repeat-x
  background-position: 0%
  background-size: 400% 100%
  opacity: 1
  animation: medit8-coach 1s steps(4, end) infinite
  
.medit8-coach-1
  background-image: url("../img/games/medit8/medit8-coach-1.svg");

.medit8-coach-2
  background-image: url("../img/games/medit8/medit8-coach-2.svg");

.medit8-coach-3
  background-image: url("../img/games/medit8/medit8-coach-3.svg");
  
.medit8-background-anim
  animation: medit8-background 5s infinite linear
  
.medit8-coach-container-anim
  animation: medit8-coach-container 10s infinite ease-in-out 
  
@keyframes medit8-background
  0%
    transform: skew(10deg)
  25%
    transform: skew(0deg)
  50%
    transform: skew(10deg)
  75%
    transform: skew(20deg)
  100%
    transform: skew(10deg)
    
@keyframes medit8-coach-container
  0%
    transform: translate(0%, -10%)
  25%
    transform: translate(25%, 0%)
  50%
    transform: translate(0%, 10%)
  75%
    transform: translate(-25%, 0%)
  100%
    transform: translate(0%, -10%)
  
@keyframes medit8-coach
  from
    background-position: 0%
  to
    background-position: 400%
