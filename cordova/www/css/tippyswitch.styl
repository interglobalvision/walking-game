.tippy-stage
  perspective: 1000px

#tippy-container
  transform-style: preserve-3d
  height: 100%

#tippy-box
  height: 90%
  width: 40px
  top: 5%
  left: 50%
  margin-left: -20px
  background: linear-gradient(to bottom, #e22d2d 1%, #89ff8d 100%)
  position: relative
  transform: rotateX(10deg)
  transition: 200ms all
  animation: tippy-hue 1s infinite linear
  &.backwards
    transform: rotateX(-10deg)
    background: linear-gradient(to bottom, #89ff8d 1%, #e22d2d 100%)

#tippy-ball
  background-color: white
  width: 10px
  height: 10px
  border-radius: 10px
  margin-left: -5px
  position: absolute
  left: 50%
  bottom: 15%
  animation: tippy-ball .5s infinite ease-out
  
@keyframes tippy-hue
  from
    -webkit-filter: hue-rotate(0deg);
    filter: hue-rotate(0deg);
  to
    -webkit-filter: hue-rotate(360deg);
    filter: hue-rotate(360deg);
    
@keyframes tippy-ball
  0%
    box-shadow: white 0 0 10px 5px
  20%
    box-shadow: white 0 0 0px 0px
  100%
    box-shadow: white 0 0 10px 5px
