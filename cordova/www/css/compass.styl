.map-stage
  text-align: center
  display: none
  background-color: blue 
  
#map-ground
  height: 50%
  width: 100%
  position: fixed
  bottom: 0
  left: 0
  
#map-floor
  position: absolute
  height: 200%
  width: 100%
  bottom: 0
  left: 0
  background: linear-gradient(to bottom, #ff0000 0%,#000000 100%)

#compass
  position: absolute
  width: 25%
  bottom: 5px
  left: 5px
  transition: transform 300ms linear

#radar
  width: 10px
  height: 10px
  background: red
  animation-name: bleep
  animation-iteration-count: infinite
  animation-duration: 0ms

@keyframes bleep
  0%, 100%
    opacity: 1
  50%
    opacity: 0.1
    
