$map-transition = 300ms linear

.map-sky
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 50%
  background-color: rgb(0,120,255)
  
.map-orientation
  margin-left: -200%
  width: 400%
  
.map-clouds
  position: fixed
  top: 0
  left: 50%
  height: 50%
  background-repeat: repeat-x
  background-size: 50% 80%
  background-position: center
  background-image: url('../img/map/clouds.svg')
  opacity: 0.9
  
.map-skyline
  position: fixed
  top: 0
  left: 50%
  height: 50%
  background-position: center bottom
  background-repeat: repeat-x
  background-size: 25%

.map-floor-container
  height: 50%
  width: 100%
  position: fixed
  bottom: 0
  left: 0
  overflow: hidden

.map-floor
  position: absolute
  height: 400%
  width: 100%
  bottom: 0
  left: 0
  background: black
  
.map-object
  position: absolute
  height: 100%
  bottom: 0
  left: 50%
  background-repeat: repeat-x
  background-size: 25% 100%

//DESERT
.world-0
  .map-skyline
    background-image: url('../img/map/sky-0.svg');
  .map-floor
    background: linear-gradient(to bottom, #FF7BAC 0%,#2E3192 100%);
  .map-object
    background-image: url('../img/map/object-0.svg');

//CITY
.world-1
  .map-skyline
    background-image: url('../img/map/sky-1.svg');
  .map-floor
    background: linear-gradient(to bottom, #A6CCCC 0%,#A19633 100%);
  .map-object
    background-image: url('../img/map/object-1.svg');
  
//ARCTIC
.world-2
  .map-skyline
    background-image: url('../img/map/sky-2.svg');
  .map-floor
    background: linear-gradient(to bottom, #29ABE2 0%,#00686A 100%);
  .map-object
    background-image: url('../img/map/object-2.svg');
    
//JUNGLE
.world-3
  .map-skyline
    background-image: url('../img/map/sky-3.svg');
  .map-floor
    background: linear-gradient(to bottom, #00F5AC 0%,#002B3F 100%);
  .map-object
    background-image: url('../img/map/object-3.svg');

#map-goal-container
  position: fixed
  bottom: 50%
  width: 100%
  height: 50%
  transform-origin: center bottom
  transform: translateX(0%)

#map-goal
  position: absolute
  bottom: 0
  width: 100%
  height: 100%
  transform-origin: center bottom
  transform: scale(.01)
  transition: transform $map-transition

.map-flag-container
  position: absolute
  bottom: 0
  left: 50%
  width: 25%
  height: 75%
  border-left: 7px ridge silver

.map-flag
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 30%

#compass
  position: absolute
  height: 12%
  bottom: 2%
  left: 5%
  //transition: transform $map-transition
  
#map-menu
  height: 100%
  width: 100%
  top: 0
  left: 0
  position: absolute
  
.map-menu-coach
  position: absolute
  height: 12%
  bottom: 2%
  right: 5%
  
#map-menu-bubble
  position: absolute
  bottom: 18%
  right: 5%
  width: 90%
  max-height: 80%
  height: auto
  background: white
  box-sizing: border-box
  border: 5px solid blue
  color: blue
  border-radius: 15px
  padding: 4%
  box-sizing: border-box
  display: none
  overflow-y: scroll
  
li.menu-item
  margin-bottom: 1em
  a 
    text-decoration: underline
  
ul.menu-list
  margin-bottom: 1em
    
@keyframes clouds
  0%
    background-position-x: 0%
  100%
    background-position-x: 400%
