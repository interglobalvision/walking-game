$map-transition = 300ms linear

.map-stage
  display: none

#map-sky
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 50%
  background-color: rgb(0,120,255);
  background-position: center bottom;
  background-repeat: no-repeat;
  background-size: contain;
  transition: background-color $map-transition
  
.map-floor-container
  height: 50%
  width: 100%
  position: fixed
  bottom: 0
  left: 0
  overflow: hidden
  
.map-floor
  position: absolute
  height: 400%
  width: 100%
  bottom: 0
  left: 0
  background: black
  
.sky-1
  background-image: url('../img/map/sky-1.png');

.floor-1
  background: linear-gradient(to bottom, #FF7BAC 0%,#2E3192 100%);
  
.sky-2
  background-image: url('../img/map/sky-2.png');

.floor-2
  background: linear-gradient(to bottom, #fefefe 0%,#909090 100%);

#map-goal-container
  position: fixed
  bottom: 50%
  width: 100%
  height: 50%
  transform-origin: center bottom
  transform: translateX(0%)
  transition: transform $map-transition
  
#map-goal
  position: absolute
  bottom: 0
  width: 100%
  height: 100%
  transform-origin: center bottom
  transform: scale(.01)
  transition: transform $map-transition

.map-flag-container
  position: absolute
  bottom: 0
  left: 50%
  width: 25%
  height: 75%
  border-left: 5px solid red 
  
.map-flag
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 30%

#compass
  position: absolute
  width: 25%
  bottom: 5px
  left: 5px
  transition: transform $map-transition

@keyframes bleep
  0%, 100%
    opacity: 1
  50%
    opacity: 0.1
    
